{
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist",
    "**/*.astro"
  ],
  "compilerOptions": {
    "lib": [
      "ES2015",
      "DOM"
    ],
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "target": "ES2022", 
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,             
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  }
}